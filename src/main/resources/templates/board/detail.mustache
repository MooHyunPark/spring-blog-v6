{{> layout/header}}

<section>
    {{#model.isOwner}}
        <div style="display: flex">
            <form action="/board/{{model.id}}/delete" method="post">
                <button type="submit">삭제</button>
            </form>

            <form action="/board/{{model.id}}/update" method="get">
                <button type="submit">수정</button>
            </form>

        </div>
    {{/model.isOwner}}

    <div>
        작성자 : {{model.username}} <br>
        번호 : {{model.id}} <br>
        제목 : {{model.title}} <br>
        내용 : {{model.content}} <br>
        작성일 : {{model.createdAt}}<br>

    </div>

    <section>
        <h2>댓글</h2>
        <hr>
        {{#model.replies}}
            <div> 번호 : {{id}}, comment : {{comment}}, 작성자 : {{username}} {{#isOwner}}<button>삭제</button>{{/isOwner}}</div>

        {{/model.replies}}


    </section>

</section>
</body>
</html>